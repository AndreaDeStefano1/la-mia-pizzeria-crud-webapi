@model CategoryPizza

<div class="container">
    <form method="post" asp-action="Update" asp-controller="Pizza" asp-route-id="@Model.Pizza.PizzaId">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <strong>Nome:</strong>
            <input asp-for="Pizza.Name" class="d-block w-100" />
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Dewscrizione:</strong>
            <input asp-for="Pizza.Description" class="d-block w-100"  />
            <span asp-validation-for="Pizza.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Immagine:</strong>
            <input asp-for="Pizza.Image" class="d-block w-100" />
            <span asp-validation-for="Pizza.Image" class="text-danger"></span>
        </div> 
        <div class="mb-3">
            <strong>Prezzo:</strong>
            <input asp-for="Pizza.Price" class="d-block w-100" />
            <span asp-validation-for="Pizza.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Categoria:</strong>
            <select asp-for="Pizza.CategoryId" class="form-select">
                @foreach (Category category in Model.Categories)
                {
                    @if (Model.Pizza.CategoryId == category.CategoryId)
                    {
                        <option value="@category.CategoryId" selected>@category.Name</option>
                    }else
                    {

                        <option value="@category.CategoryId">@category.Name</option>
                    }
                }
            </select>
            <span asp-validation-for="Pizza.CategoryId" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Ingredienti:</strong>
            <select multiple asp-for="IngredientIds" class="form-select">
                @foreach (Ingredient ingredient in Model.Ingredients)
                {
                    @if (Model.Pizza.Ingredients.Contains( ingredient))
                    {
                        <option value="@ingredient.Id" selected>@ingredient.Name</option>
                    }
                    else
                    {

                        <option value="@ingredient.Id">@ingredient.Name</option>
                    }


                    @*<select asp-for="SelectedTags"
                        multiple="multiple"
                        size="10"
                        class="form-control mb-2 mr-sm-2 ml-sm-3 leftList"
                        asp-items="@Model.Tags">
                    </select>*@

                   
                    
                }
            </select>
            <span asp-validation-for="IngredientIds" class="text-danger"></span>
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Aggiorna">
        </div>
    </form>
</div>