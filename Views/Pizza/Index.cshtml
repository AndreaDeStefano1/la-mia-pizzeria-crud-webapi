@model List<Pizza>


<div class="container">
    <div class="row">
        <div class="col">
            <a class="btn btn-info" href="@Url.Action("Create", "Pizza")">Crea Nuova Pizza</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nome</th>
                        <th>Ingredienti</th>
                        <th>Immagine</th>
                        <th>Prezzo</th>
                        <th>Azione</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {

                        @foreach (Pizza pizza in Model)
                        {
                            <tr>
                                <td>@pizza.PizzaId</td>
                                <td>@pizza.Name</td>
                                <td>@pizza.Description</td>
                                <td><img src="@pizza.Image" /></td>
                                <td>@pizza.Price €</td>
                                <td>
                                    <a class="btn btn-info" href="@Url.Action("Show", "Pizza", new { Id = pizza.PizzaId } )">Vedi</a>
                                    <a class="btn btn-warning" href="@Url.Action("Update", "Pizza", new { Id = pizza.PizzaId } )">Modifica</a>
                                    <form asp-action="Delete" asp-controller="Pizza" asp-route-id="@pizza.PizzaId" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class=" btn btn-danger">
                                            Delete
                                        </button>
                                    </form>
                                 </td>
                            </tr>
                        }


                    }
                    else
                    {
                        <tr>
                            <td></td>
                            <td>
                                <h2>No pizze presenti</h2>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
    

</div>